<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints hgrow="ALWAYS" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints vgrow="ALWAYS" />
      <RowConstraints />
   </rowConstraints>
   <children>
      <Label id="lblContext" text="Map context" />
      <TextField id="edtContext" fx:id="edtContext" GridPane.columnIndex="1" />
      <TextField id="edtNode" fx:id="edtNode" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      <TextArea id="edtValueData" fx:id="edtValueData" prefHeight="200.0" prefWidth="200.0" GridPane.columnSpan="2" GridPane.rowIndex="3" />
      <ChoiceBox id="cmbNodeType" fx:id="cmbNodeType" prefWidth="150.0" GridPane.rowIndex="2" />
      <Button id="btnImport" mnemonicParsing="false" onAction="#importMaps" text="Import" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="4" />
      <Label text="Code Scheme" GridPane.rowIndex="1" />
      <TextField id="edtCodeScheme" fx:id="edtCodeScheme" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</GridPane>
